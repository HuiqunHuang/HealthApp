<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" android:background="#FA8072">
        <ImageView
            android:id="@+id/walkimage"
            android:background="#FA8072"
            android:layout_marginTop="25dp"
            android:layout_width="57dp"
            android:layout_height="57dp"/>
        <TextView
            android:id="@+id/walktitle"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/walkstep"
        android:background="#FA8072"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/walkcalorie"
                android:background="#FA8072"
                android:layout_marginLeft="4dp"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" android:background="#DA70D6">
            <ImageView
                android:id="@+id/runimage"
                android:background="#DA70D6"
                android:layout_marginTop="25dp"
                android:layout_width="57dp"
                android:layout_height="57dp"/>
            <TextView
                android:id="@+id/runtitle"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/runstep"
                android:background="#DA70D6"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/runcalorie"
                android:background="#DA70D6"
                android:layout_marginLeft="4dp"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" android:background="#87CEEB">
            <ImageView
                android:id="@+id/rideimage"
                android:background="#87CEEB"
                android:layout_marginTop="25dp"
                android:layout_width="57dp"
                android:layout_height="57dp"/>
            <TextView
                android:id="@+id/ridetitle"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ridestep"
                android:background="#87CEEB"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/ridecalorie"
                android:background="#87CEEB"
                android:layout_marginLeft="4dp"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" android:background="#7CFC00">
            <ImageView
                android:id="@+id/upimage"
                android:background="#7CFC00"
                android:layout_marginTop="25dp"
                android:layout_width="57dp"
                android:layout_height="57dp"/>
            <TextView
                android:id="@+id/uptitle"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/upstep"
                android:background="#7CFC00"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/upcalorie"
                android:background="#7CFC00"
                android:layout_marginLeft="4dp"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>