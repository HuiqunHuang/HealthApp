<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ride_subcoat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="health.healthapp.Activity.RideSubcoatActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00bfa5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00897b"
            android:gravity="center"
            android:id="@+id/top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="骑行信息"
                android:textSize="20sp"
                android:layout_marginLeft="110dp"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
            <ImageView
                android:id="@+id/image_contact"
                android:src="@mipmap/share"
                android:layout_marginLeft="80dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_alignTop="@+id/top"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#00bfa5"
            android:gravity="center"
            android:id="@+id/ride_subcoat_senter_pic">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_corner"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/walk_subcoat_image"
                    android:src="@mipmap/cycle"
                    android:tint="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
                <TextView
                    android:id="@+id/ride_subcoat_dis"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:id="@+id/ride_subcoat_calorie"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#00bfa5"
            android:gravity="center"
            android:layout_alignTop="@+id/ride_subcoat_senter_pic"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00bfa5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#00bfa5"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@drawable/shape_corner"
                        >
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:src="@mipmap/ruler"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#00bfa5"
                        >
                        <TextView
                            android:id="@+id/ride_subcoat_dis_title"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="距离"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                        <TextView
                            android:id="@+id/ride_subcoat_dis1"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_alignTop="@+id/ride_subcoat_dis_title"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#00bfa5"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_corner"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@mipmap/feet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#00bfa5"
                        >
                        <TextView
                            android:id="@+id/ride_subcoat_steplength_title"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="步长"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                        <TextView
                            android:id="@+id/ride_subcoat_steplength"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_alignTop="@+id/ride_subcoat_dis_title"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00bfa5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#00bfa5"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@drawable/shape_corner"
                        >
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/speed"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#00bfa5"
                        >
                        <TextView
                            android:id="@+id/ride_subcoat_speed_title"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="速度"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                        <TextView
                            android:id="@+id/ride_subcoat_speed"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_alignTop="@+id/ride_subcoat_dis_title"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#00bfa5"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_corner"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/histogram"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#00bfa5"
                        >
                        <TextView
                            android:id="@+id/ride_subcoat_steprate_title"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="步频"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                        <TextView
                            android:id="@+id/ride_subcoat_steprate"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_alignTop="@+id/ride_subcoat_dis_title"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00bfa5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/left"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="230dp"
                android:layout_height="130dp"
                android:id="@+id/ride_subcoat_step_graph"></LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
